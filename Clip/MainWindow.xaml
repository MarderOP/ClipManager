<Window
    x:Class="Clip.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clip"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Clip">




    <Grid x:Name="Body" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="auto" Background="#121212">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Panel -->
        <StackPanel x:Name="Header" Grid.Row="0" Background="Aqua" Visibility="Collapsed">
            <TextBlock>Header</TextBlock>
        </StackPanel>
        
        
        <Grid x:Name="BodyContent" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*" />
                <ColumnDefinition Width="0.75*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


            <!-- Left Panel -->
            <Grid x:Name="LeftPanel" Grid.Column="0" Background="#2E2E2E" Padding="16" RowDefinitions="Auto, Auto, *">
                <TextBlock Text="📁 All clips Structure from stream"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#E0E0E0"
               Margin="0,0,0,12"
               Grid.Row="0" />

                <StackPanel x:Name="LeftPanelContent" Grid.Row="1" Orientation="Vertical" Visibility="Collapsed">
                    <Button Content="Create Folder" Click="CreateFolder_Click" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Create Timestamp" Click="CreateTimestamp_Click" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Create Compilation" Click="CreateCompilation_Click" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Delete" Click="DeleteButton_Click" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>

                <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent">
                    <TreeView x:Name="FolderTreeView" Visibility="Collapsed"
                  ItemInvoked="FolderTreeView_ItemInvoked"
                  SelectionMode="Single"
                  CanDragItems="False"
                  AllowDrop="False">
                        <TreeView.ItemTemplate>
                            <DataTemplate >
                                <Border Background="#2E2E2E"
                                        BorderBrush="{Binding Content.BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="4"
                                    Padding="6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Content.Display}" Foreground="#E0E0E0" ToolTipService.ToolTip="{Binding}" />
                                        <StackPanel.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Rename" Click="Rename_Click" Tag="{Binding}"/>
                                                <MenuFlyoutItem Text="Delete" Click="Delete_Click" Tag="{Binding}" />
                                            </MenuFlyout>
                                        </StackPanel.ContextFlyout>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </TreeView.ItemTemplate>

                    </TreeView>
                </ScrollViewer>
            </Grid>


            <!-- Main Panel -->
            <Grid x:Name="MainPanel" Grid.Column="1" Background="#121212" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Video Section -->
                <Grid x:Name="VideoPanel" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="ButtonRow" Height="Auto"/>
                        <RowDefinition x:Name="VideoRow" Height="*"/>
                    </Grid.RowDefinitions>
                    <Button 
            x:Name="LoadVideoButton" 
            Click="LoadVideoHandle" 
            Content="Click Me to Load Video" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Style="{StaticResource ButtonStyle}" 
            Grid.Row="0"/>
                    <Viewbox x:Name="ViewboxVideo" 
                             Stretch="Uniform"
                             HorizontalAlignment="Center">
                        <MediaPlayerElement 
                                x:Name="VideoPlayback"
                                Width="Auto"
                                Height="Auto"
                                Stretch="Uniform"
                                AreTransportControlsEnabled="False" />
                    </Viewbox>
                </Grid>
                <!-- Controls Section -->
                <Grid x:Name="ControlsPanel" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Video Time Manipulation -->
                    <Grid x:Name="VideoManipulation" Grid.Row="0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition Width="0.6*" />
                            <ColumnDefinition Width="0.2*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left: Timeline -->
                        <Grid Grid.Column="0" x:Name="TimelineContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="Timeline" Foreground="#E0E0E0" FontSize="14">xx:xx:xx - xx:xx:xx</TextBlock>
                        </Grid>

                        <!-- Center: Backward, Pause, Forward Buttons -->
                        <Grid Grid.Column="1" x:Name="VideoButtonsContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="BackwardsButton" Grid.Column="0" Click="BackwardsButton_Click" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="BackwardsButtonIcon" Source="ms-appx:///Assets/Left.svg" Width="24" Height="24" />
                            </Button>
                            <Button x:Name="PauseButton" Grid.Column="1" Click="PauseButton_Click" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="PauseButtonIcon" Source="ms-appx:///Assets/Pause.svg" Width="24" Height="24"/>
                            </Button>
                            <Button x:Name="ForwardsButton" Grid.Column="2" Click="ForwardsButton_Click" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="ForwardsButtonIcon" Width="24" Height="24">
                                    <Image.Source>
                                        <SvgImageSource UriSource="ms-appx:///Assets/Right.svg"/>
                                    </Image.Source>
                                </Image>
                            </Button>
                        </Grid>

                        <!-- Right: TimeChange Input -->
                        <Grid Grid.Column="2" x:Name="TimeChangeContainer" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBox x:Name="TimeChange"  PlaceholderText="10s (default)" LostFocus="TimeChange_LostFocus" />
                        </Grid>
                    </Grid>

                    <!-- Timestamp Manipulation -->
                    <Grid x:Name="TimestampManipulation" Grid.Row="1" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.2*" />
                        </Grid.ColumnDefinitions>

                        <!-- Begin Time Control -->
                        <Grid Grid.Column="1" x:Name="BeginTimeControlContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="ChangeBeginTimeBackwardButton" Grid.Column="0" Click="ChangeBeginTimeBackward" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="ChangeBeginTimeBackwardIcon" Source="ms-appx:///Assets/Left.svg" Width="24" Height="24"/>
                            </Button>
                            <TextBox x:Name="BeginTimeInput" Grid.Column="1" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" PlaceholderText="Begin (HH:MM:SS)" />
                            <Button x:Name="ChangeBeginTimeForwardButton" Grid.Column="2" Click="ChangeBeginTimeForward" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="ChangeBeginTimeForwardIcon" Source="ms-appx:///Assets/Right.svg" Width="24" Height="24"/>
                            </Button>
                        </Grid>

                        <!-- End Time Control -->
                        <Grid Grid.Column="2" x:Name="EndTimeControlContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="ChangeEndTimeBackwardButton" Grid.Column="0" Click="ChangeEndTimeBackward" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="ChangeEndTimeBackwardIcon" Source="ms-appx:///Assets/Left.svg" Width="24" Height="24"/>
                            </Button>
                            <TextBox x:Name="EndTimeInput" Grid.Column="1" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" PlaceholderText="End (HH:MM:SS)"/>
                            <Button x:Name="ChangeEndTimeForwardButton" Grid.Column="2" Click="ChangeEndTimeForward" Style="{StaticResource ButtonStyle}">
                                <Image x:Name="ChangeEndTimeForwardIcon" Source="ms-appx:///Assets/Right.svg" Width="24" Height="24"/>
                            </Button>
                        </Grid>

                        <!-- TimestampChange -->
                        <Grid Grid.Column="3" x:Name="TimestampChangeContainer" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBox x:Name="TimestampChange" PlaceholderText="10s (default)" LostFocus="TimestampChange_LostFocus" />
                        </Grid>
                    </Grid>

                    <!-- Timestamp Action Buttons -->
                    <Grid x:Name="TimestampButtons" Grid.Row="2" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button 
            x:Name="PlayTimestamp" 
            Grid.Row="0" 
            Click="PlayButton_Click" 
            Content="Play selected Timestamp" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Style="{StaticResource ButtonStyle}" />

                        <Button 
            x:Name="SaveTimestamp" 
            Grid.Row="1" 
            Click="SaveTimestamp_Click" 
            Content="Save Selected Timestamp" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Style="{StaticResource ButtonStyle}" />
                    </Grid>
                </Grid>

            </Grid>




            <!-- Right Panel -->
            <StackPanel x:Name="RightPanel" Grid.Column="2" Background="#2E2E2E">
                <TextBlock>JSON content preview:</TextBlock>
                <Button Click="ExportJsonButton_Click">Export JSON</Button>
                <Button Click="ImportJsonButton_Click">Import JSON</Button>
                <TextBlock x:Name="JsonPreview"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
